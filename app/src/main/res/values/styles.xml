<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/bar_secondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/bar_secondary</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">20dp</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/white</item>
    </style>


    <style name="MiTemaAppBar" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colores de la barra de aplicaciones -->
        <item name="colorPrimary">@color/bar_secondary</item>
        <item name="colorPrimaryVariant">@color/bar_secondary</item>
        <item name="colorSurface">@color/bar_primary</item>

        <!-- Color de fondo de la ventana -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">@color/bar_secondary</item>

        <!-- Texto claro en la barra de navegación -->
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Color de la barra de navegación -->
        <item name="android:navigationBarColor">@color/bar_secondary</item>
    </style>

    <style name="MiTemaAppBarStyleText">
        <item name="android:textSize">20sp</item>
        <!-- Otros atributos de estilo de texto que desees agregar -->
    </style>

    <style name="AppThemeFabricante" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CantidadTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">#fff</item>
        <item name="colorOnSurface">#ffffff</item>
        <item name="colorError">#ff3d00</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Estilo para el TextInputLayout -->
    <style name="OutlinedTextFieldStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <!-- Atributos comunes para el TextInputLayout -->
        <item name="boxStrokeColor">@color/selector</item>
        <item name="hintTextColor">@color/white</item>
        <!-- Otros atributos comunes según tus necesidades -->
    </style>

    <!-- Estilo general para el TextInputLayout y el TextInputEditText -->
    <!-- Estilo para el TextInputEditText -->
    <style name="WhiteTextInputEditTextStyle">
        <!-- Atributos comunes para el TextInputEditText -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <!-- Otros atributos comunes según tus necesidades -->
    </style>

    <style name="TextStyleLogin" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector</item>
        <item name="hintTextColor">@color/white</item>
        <item name="startIconTint">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="android:theme">@style/exampleCursor</item>
        <item name="android:textColorHint">@color/white</item>

    </style>

    <style name="exampleCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/white</item>
    </style>


</resources>
